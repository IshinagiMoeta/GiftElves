<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wednesday_image"
        android:scaleType="centerCrop"
        android:src="@mipmap/def_loading"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <RelativeLayout
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/wednesday_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textSize="12sp"
            android:id="@+id/wednesday_title"
            android:text="Title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="4dp"
            android:src="@mipmap/g_biao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_below="@+id/wednesday_title"
            android:layout_alignLeft="@+id/wednesday_title"
            android:layout_alignStart="@+id/wednesday_title" />
        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/blank"
            android:id="@+id/wednesday_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000-01-01"
            android:layout_below="@+id/wednesday_title"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />
    </RelativeLayout>
    

</RelativeLayout>