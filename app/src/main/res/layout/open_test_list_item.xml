<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_margin="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/open_test_list_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:id="@+id/open_test_list_title"
        android:layout_alignTop="@+id/open_test_list_image"
        android:layout_toRightOf="@+id/open_test_list_image"
        android:layout_toEndOf="@+id/open_test_list_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="time"
        android:textSize="12sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/open_test_list_time"
        android:layout_alignBottom="@+id/open_test_list_image"
        android:layout_alignLeft="@+id/open_test_list_operators"
        android:layout_alignStart="@+id/open_test_list_operators" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="operators"
        android:textSize="12sp"
        android:id="@+id/open_test_list_operators"
        android:layout_below="@+id/open_test_list_title"
        android:layout_alignLeft="@+id/open_test_list_title"
        android:layout_alignStart="@+id/open_test_list_title" />

    <Button
        android:background="@drawable/gift_list_button"
        android:textColor="@color/blank"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="查看"
        android:id="@+id/open_test_list_button"
        android:layout_above="@+id/open_test_list_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

</RelativeLayout>