<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wednesday_scrollview"
    tools:context="com.bystanders.moeta.giftelves.activity.WednesdayActivity">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/wednesday_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back" />

            <TextView
                android:id="@+id/wednesday_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/blank"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_margin="10dp"
                android:src="@mipmap/share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/wednesday_share" />

        </RelativeLayout>

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/def_bg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/wednesday_img_bg" />
        <ImageView
            android:src="@mipmap/g_biao"
            android:layout_margin="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/wednesday_img_bg"
            android:layout_alignLeft="@+id/wednesday_img_bg"
            android:layout_alignStart="@+id/wednesday_img_bg"
            android:id="@+id/imageView8" />
        <TextView
            android:text="2016-06-16"
            android:textColor="@color/blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_toRightOf="@+id/imageView8"
            android:layout_toEndOf="@+id/imageView8"
            android:id="@+id/wednesday_data" />
        <TextView
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="导读"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wednesday_img_bg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/wednesday_descs" />

        <GridView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/wednesday_descs"
            android:id="@+id/wednesday_grid"
            android:numColumns="4" />

    </RelativeLayout>

</ScrollView>
