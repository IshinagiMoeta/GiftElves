<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_marginRight="20dp"
        android:id="@+id/hint_head_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/xlistview_arrow"
        android:layout_alignBottom="@+id/hint_head_text_2"
        android:layout_toLeftOf="@+id/hint_head_text_2"
        android:layout_toStartOf="@+id/hint_head_text_2" />

    <TextView
        android:id="@+id/hint_head_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hint_head_image"
        android:layout_centerHorizontal="true"
        android:text="@string/hint_head_text_1"
        android:textSize="12dp"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/hint_head_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/hint_head_text_2"
        android:textSize="12dp"/>
</RelativeLayout>