<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">
<ImageView
    android:layout_marginLeft="5dp"
    android:id="@+id/gift_list_item_image"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:src="@mipmap/ic_launcher"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
    <TextView

        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Title"
        android:layout_marginLeft="10dp"
        android:id="@+id/gift_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gift_list_item_image"
        android:layout_toRightOf="@id/gift_list_item_image"/>
    <TextView
        android:textSize="10sp"
        android:text="Type"
        android:layout_marginLeft="10dp"
        android:id="@+id/gift_list_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/gift_list_item_image"
        android:layout_toEndOf="@+id/gift_list_item_image" />
    <TextView
        android:textSize="10sp"
        android:text="num"
        android:textColor="@color/colorPrimary"
        android:id="@+id/gift_list_item_num"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView" />
    <TextView
        android:textSize="10sp"
        android:text="剩余:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/gift_list_item_image"
        android:layout_toRightOf="@+id/gift_list_item_image"
        android:layout_marginTop="10dp"/>
    <TextView
        android:textSize="10sp"
        android:layout_marginLeft="28dp"
        android:text="Data"
        android:id="@+id/gift_list_item_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gift_list_item_num"
        android:layout_toRightOf="@+id/gift_list_item_num"
        android:layout_marginStart="28dp" />
    <Button
        android:background="@drawable/gift_list_button"
        android:textColor="@color/blank"
        android:text="button"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:id="@+id/gift_list_item_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/gift_list_item_data"
        android:layout_alignBottom="@+id/gift_list_item_data"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />
</RelativeLayout>